}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center; /* Center the title like a menu header */
    padding: 5px 15px;
    background-color: #2b1f0e; /* Dark brown background for title */
    color: #d4af37; /* Gold text */
    border: 2px solid #d4af37;
    border-radius: 8px;
    bottom: 0px; /* Tweak this if title overlaps border */
}

/* --- CHECKBOXES --- */
QCheckBox {
    spacing: 10px;
    color: #2b1f0e;
    font-weight: 600;
}

QCheckBox::indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #8c6c26; /* Darker gold/brown border */
    border-radius: 4px;
    background-color: white;
}

QCheckBox::indicator:checked {
    background-color: #d4af37; /* Gold fill when checked */
    border-color: #2b1f0e;
    /* You can add a checkmark image here if you have one, 
       otherwise the color change is enough */
    image: url(:/images/checkmark.png); /* Optional: Only if you have an icon */
}

QCheckBox::indicator:hover {
    border-color: #d4af37; /* Bright gold on hover */
}

/* --- SPIN BOXES (Number Inputs) --- */
QSpinBox, QDoubleSpinBox {
    background-color: #fff;
    border: 2px solid #8c6c26;
    border-radius: 5px;
    padding: 4px;
    min-width: 60px;
    color: #2b1f0e;
    font-weight: bold;
    selection-background-color: #d4af37;
}

QSpinBox:hover, QDoubleSpinBox:hover {
    border-color: #d4af37;
}

/* Style the up/down arrows */
QSpinBox::up-button, QDoubleSpinBox::up-button,
QSpinBox::down-button, QDoubleSpinBox::down-button {
    background-color: #2b1f0e; /* Dark brown buttons */
    border-radius: 2px;
    width: 16px;
}

QSpinBox::up-arrow, QDoubleSpinBox::up-arrow {
    /* Qt draws a default arrow, but you can color it if using an image */
    /* Alternatively, simple styling: */
    width: 7px;
    height: 7px;
    border-image: none; /* Reset if needed */
}

